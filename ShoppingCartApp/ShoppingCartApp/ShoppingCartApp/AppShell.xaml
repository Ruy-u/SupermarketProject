<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ShoppingCartApp.Views"
       x:Class="ShoppingCartApp.AppShell">

    <!-- Tabs for Home and Cart -->
    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Cart">
            <ShellContent ContentTemplate="{DataTemplate local:CartPage}" />
        </Tab>
    </TabBar>

    <!-- Logout Menu Item -->
    <Shell.ToolbarItems>
        <ToolbarItem Text="Logout" Clicked="OnLogoutClicked" />
    </Shell.ToolbarItems>
</Shell>
