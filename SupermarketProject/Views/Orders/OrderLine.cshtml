@model IEnumerable<SupermarketProject.Models.OrderLineProjects>

@{
    Layout = "_CustomerLayout";
}

<div class="container mt-4">
    <h1>Order Details</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model)
            {
                <tr>
                    <td>@line.ItemName</td>
                    <td>@line.ItemQuant</td>
                    <td>$@line.ItemPrice</td>
                    <td>$@(line.ItemQuant * line.ItemPrice)</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="MyOrder" class="btn btn-secondary">Back to My Orders</a>
</div>
