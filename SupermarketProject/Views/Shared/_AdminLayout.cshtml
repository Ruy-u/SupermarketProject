<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/supermarket-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.6); /* Dark overlay for readability */
                z-index: -1;
            }

        .container {
            background: rgba(255, 255, 255, 0.95); /* Slightly stronger white background for admin */
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
        }

        .navbar-brand {
            font-size: 1.7rem;
            font-weight: bold;
            color: #0d6efd !important; /* Matches Bootstrap primary color */
        }

        .nav-link {
            color: #3503fc !important; /* Adjust the links color */
        }

            .nav-link:hover {
                color: #ffc107 !important; /* Yellow highlight on hover */
            }

        .footer {
            background-color: rgba(0, 0, 0, 0.85);
            color: #f8f9fa;
        }

            .footer span {
                font-size: 0.9rem;
                color: #adb5bd;
            }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Admin_Home", "UserAccount")">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Admin_Home", "UserAccount")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Items")">Manage Items</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Email", "UserAccount")">Send Email</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "UserAccount")">User Accounts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "UserAccount")">Add Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("PurchaseReport", "Orders")">Purchase Report</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Items")">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("Logout", "UserAccount")">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 text-center">
        <div class="container">
            <span>&copy; 2024 Supermarket Admin Panel. All Rights Reserved.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
