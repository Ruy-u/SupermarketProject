<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: url('/Images/supermarket-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5); /* Dark overlay for readability */
                z-index: -1;
            }

        .container {
            background: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .footer {
            background-color: rgba(0, 0, 0, 0.8);
            color: #f8f9fa;
            padding: 15px 0;
        }

            .footer span {
                font-size: 0.9rem;
                color: #adb5bd;
            }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Customer_Home", "UserAccount")">Supermarket</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Customer_Home", "UserAccount")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("CatalogueBuy", "Orders")">Catalogue</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="ViewCart" asp-controller="Orders" class="nav-link">View Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MyOrder", "Orders")">My Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("Logout", "UserAccount")">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto text-center">
        <div class="container">
            <span>&copy; 2024 Supermarket. All Rights Reserved.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
