@model IEnumerable<SupermarketProject.Models.UserAccountProjects>

@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h1>Search Users</h1>

    <form asp-action="UserSearch" method="get">
        <div class="input-group mb-3">
            <input type="text" name="role" class="form-control" placeholder="Search by role (e.g., Admin, Customer)" />
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found matching the specified role.</p>
    }
</div>
