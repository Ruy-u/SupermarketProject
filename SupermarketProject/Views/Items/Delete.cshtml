@model SupermarketProject.Models.ItemProjects

@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h1 class="text-center text-danger mb-4">Delete Item</h1>

    <div class="alert alert-warning text-center">
        <strong>Are you sure you want to delete this item?</strong>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">$@Model.Price</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>
    </dl>

    <div class="text-center">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
        </form>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </div>
</div>
