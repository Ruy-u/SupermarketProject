@model IEnumerable<SupermarketProject.Models.ItemProjects>

@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h1>Manage Items</h1>

    <a class="btn btn-success mb-3" asp-action="Create" asp-controller="Items">Add New Item</a>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Category</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items found.</p>
    }
</div>
